<div data-role="header">
  <h1>Step 1/3: Enter Name</h1>
</div>
<div data-role="content">
<h1><%= @realm.event.name %></h1>
<h2><%= @realm.organization.name %></h2>
<%= form_tag(url_for(:action => "lookup", :controller => "orders"), :method => 'post') do %>
<div data-role="fieldcontain">
  <%= label_tag(:name, "Full Name") %>
  <%= text_field_tag(:name) %>
</div>
<div class="action">
  <%= submit_tag("Next") %>
</div>
<% end %>
</div>
